<Window x:Class="DavidsRevitApp.AutoFlag.FlagContextView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DavidsRevitApp.AutoFlag"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="450">
    <Grid>
        <TextBox x:Name="MainTextBox"  TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" SpellCheck.IsEnabled="True" Text="" Margin="10,10,10,50" />
        <Button x:Name="ParseFlagBtn"  Content="Заполнить АвтоФлажок" Margin="50,0,150,20" VerticalAlignment="Bottom" Click="ParseFlagBtn_Click" />
        <Button x:Name="ReverseFlagBtn"  Content="Перевернуть список" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,20" Click="ReverseFlagBtn_Click"/>
        <TextBox x:Name="SomeNumTextBox" HorizontalAlignment="Left" Margin="10,0,0,20" TextWrapping="Wrap" Text="1,8" VerticalAlignment="Bottom" Width="30"/>
    </Grid>
</Window>
